setupStaticCollisionGeometry()
console.log(staticSurfacePartition)

// Initializes the spatial partition grid with empty arrays for each cell.
function initializeSpatialPartition() {
  for (let z = 0; z < NUM_CELLS_PER_DIMENSION; z++) {
    staticSurfacePartition[z] = new Array<collisionTriangle[]>(
      NUM_CELLS_PER_DIMENSION,
    )

    for (let x = 0; x < NUM_CELLS_PER_DIMENSION; x++) {
      staticSurfacePartition[z][x] = [] as collisionTriangle[] // Ensure each cell is an array
    }
  }
  console.log(
    `Räumliche Partition initialisiert: ${NUM_CELLS_PER_DIMENSION}x${NUM_CELLS_PER_DIMENSION} Zellen.`,
  )
}

// Sets up the static collision geometry by creating collisionTriangle objects
// and distributing them into the spatial partition grid.
function setupStaticCollisionGeometry() {
  initializeSpatialPartition() // Make sure the grid is initialized

  const rawCollisionTrianglesData = [
    {
      vertices: [tv1, tv2, tv3],
      normal: calculateNormal(tv1, tv2, tv3),
    },
    // Add more raw collision data here as needed
  ]

  rawCollisionTrianglesData.forEach((data) => {
    const colTriangle = new collisionTriangle(
      data.vertices[0],
      data.vertices[1],
      data.vertices[2],
      data.normal,
    )

    const worldVertices = data.vertices
    const worldNormal = data.normal

    // Update collision data with world coordinates (important if geometry is transformed later)
    colTriangle.updateCollisionData(
      worldVertices as [Vector3, Vector3, Vector3],
      worldNormal,
    )

    // Add the triangle to the spatial partition grid based on its bounding box
    addTriangleToPartition_BoundingBox(colTriangle)
  })

  console.log("Statische Kollisionsgeometrie im Grid eingerichtet.")
}

// Converts world coordinates (x, z) into corresponding cell indices in the spatial partition grid.
function getWorldCoordsCellIndices(
  worldX: number,
  worldZ: number,
): { cellX: number; cellZ: number } {
  // Shift world coordinates so that (-LEVEL_BOUNDARY_MAX, -LEVEL_BOUNDARY_MAX) maps to (0, 0) in the grid
  const cellX = Math.floor((worldX + LEVEL_BOUNDARY_MAX) / CELL_SIZE)
  const cellZ = Math.floor((worldZ + LEVEL_BOUNDARY_MAX) / CELL_SIZE)

  return { cellX: cellX, cellZ: cellZ }
}

// Adds a collision triangle to all grid cells that its bounding box intersects.
// This allows for efficient querying of nearby collision triangles.
function addTriangleToPartition_BoundingBox(triangle: collisionTriangle): void {
  // Calculate the bounding box of the triangle in world space
  const minX = Math.min(
    triangle.vertices[0].x,
    triangle.vertices[1].x,
    triangle.vertices[2].x,
  )
  const maxX = Math.max(
    triangle.vertices[0].x,
    triangle.vertices[1].x,
    triangle.vertices[2].x,
  )
  const minZ = Math.min(
    triangle.vertices[0].z,
    triangle.vertices[1].z,
    triangle.vertices[2].z,
  )
  const maxZ = Math.max(
    triangle.vertices[0].z,
    triangle.vertices[1].z,
    triangle.vertices[2].z,
  )

  // Get the grid cell indices for the corners of the bounding box
  const startCellIndices = getWorldCoordsCellIndices(minX, minZ)
  const startCellX = startCellIndices.cellX
  const startCellZ = startCellIndices.cellZ

  const endCellIndices = getWorldCoordsCellIndices(maxX, maxZ)
  const endCellX = endCellIndices.cellX
  const endCellZ = endCellIndices.cellZ

  // Clamp indices to be within the grid boundaries
  const clampedStartCellX = Math.max(0, startCellX)
  const clampedEndCellX = Math.min(NUM_CELLS_PER_DIMENSION - 1, endCellX)
  const clampedStartCellZ = Math.max(0, startCellZ)
  const clampedEndCellZ = Math.min(NUM_CELLS_PER_DIMENSION - 1, endCellZ)

  // Iterate over all cells intersected by the bounding box and add the triangle to their list
  for (let z = clampedStartCellZ; z <= clampedEndCellZ; z++) {
    for (let x = clampedStartCellX; x <= clampedEndCellX; x++) {
      // Basic check to ensure the cell is an array before pushing
      if (Array.isArray(staticSurfacePartition[z]?.[x])) {
        console.log(
          `DEBUG: Vor push - Zelle [${z}][${x}], Länge: ${staticSurfacePartition[z][x].length}`,
        )
        console.log(`DEBUG: Objekt, das gepusht werden soll: `, triangle)

        staticSurfacePartition[z][x].push(triangle)

        console.log(
          `DEBUG: Nach push - Zelle [${z}][${x}], Länge: ${staticSurfacePartition[z][x].length}`,
        )
      } else {
        // Error handling if a cell is not initialized correctly
        console.error(
          `FEHLER: staticSurfacePartition[${z}][${x}] ist KEIN Array! Typ: ${typeof staticSurfacePartition[z]?.[x]}`,
          staticSurfacePartition[z]?.[x],
        )
      }
    }
  }
}

// Calculates a 3D vector representing the direction of light
// based on its yaw and pitch angles.
function calculateLightDirection(yaw: number, pitch: number): Vector3 {
  // Start with a vector pointing along the positive Z axis (or chosen forward direction)
  let dir = new Vector3(0, 0, 1)

  // Apply pitch rotation around the X axis
  const cosPitch = Math.cos(pitch)
  const sinPitch = Math.sin(pitch)
  const pitchedY = dir.y * cosPitch - dir.z * sinPitch
  const pitchedZ = dir.y * sinPitch + dir.z * cosPitch
  dir.y = pitchedY
  dir.z = pitchedZ

  // Apply yaw rotation around the Y axis
  const cosYaw = Math.cos(yaw)
  const sinYaw = Math.sin(yaw)
  const yawedX = dir.x * cosYaw + dir.z * sinYaw
  const yawedZ = dir.z * cosYaw - dir.x * sinYaw
  dir.x = yawedX
  dir.z = yawedZ

  return dir.normalize() // Return a unit vector
}

// Calculates a light intensity factor for a surface based on its normal
// and the global light direction using the dot product.
function calculateLightLevel(normal: Vector3): number {
  // Dot product gives a value between -1 (surface facing away from light)
  // and 1 (surface facing directly at light).
  const dot = normal.dot(lightDir)

  // Shift and scale the dot product to get a light level (e.g., 0 to 1 or adjusted range).
  // Adding 0.5 shifts the range from [-1, 1] to [-0.5, 1.5].
  const levelFloat = dot + 0.5

  // Dividing by 8 further scales the light level (adjust as needed for desired brightness).
  return levelFloat / 8
}

function getRandomColor() {
  const letters = "0123456789ABCDEF"
  let color = "#"
  for (let i = 0; i < 6; i++) {
    color += letters[Math.floor(Math.random(0, 1) * 16)]
  }
  return color
}

